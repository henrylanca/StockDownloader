<Window x:Class="Downloader.SymbolUpload"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SymbolUpload" Height="600" Width="600" ResizeMode="NoResize">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Name="btnUpload" Width="220" Height="30" Click="btnUpload_Click">Upload</Button>

        <TextBox Name="txtSymbol" Grid.Row="1" HorizontalAlignment="Stretch" Margin="2" 
                 VerticalAlignment="Stretch" AcceptsReturn="True" Grid.ColumnSpan="2" ></TextBox>
    </Grid>
</Window>
